<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <color name="blue">#379293</color>
    <color name="blue_dark">#1C7475</color>
    <color name="blue_trans">#77379293</color>
    <color name="grey">#DDDDDD</color>
    <color name="greyer">#AACCCCCC</color>
    <color name="light_grey">#E5E5E5</color>
    <color name="dark">#444444</color>
    <color name="darker">#222222</color>

    <style name="DrawerText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/darker</item>
    </style>

    <style name="deviceListLabel">
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="deviceListSeparator">
        <item name="android:background">@color/dark</item>
    </style>

    <!-- Content browsing style -->
    <style name="contentdirectory">
        <item name="android:background">@color/grey</item>
    </style>

    <style name="browsingItemText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/darker</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="browsingItemTitle" parent="@style/browsingItemText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="browsingItemSubtitle" parent="@style/browsingItemText"></style>

    <style name="browsingItemCount" parent="@style/browsingItemText">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Renderer style -->
    <style name="renderer">
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="rendererText" parent="@android:style/TextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="rendererTitle" parent="@style/rendererText">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="rendererSubtitle" parent="@style/rendererText">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppTheme.LightToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- The app theme -->
    <style name="ActivityTheme.Primary.Base.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="primaryTextColor">@color/colorPrimary</item>
        <item name="secondaryTextColor">@color/colorPrimary</item>
        <item name="dividerColor">@color/colorPrimaryLight</item>
        <item name="iconPlaceholder">@drawable/ic_video</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/lightBackground</item>
    </style>

    <style name="ActivityTheme.Primary.Base.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="primaryTextColor">@color/colorPrimary</item>
        <item name="secondaryTextColor">@color/colorPrimary</item>
        <item name="dividerColor">@color/colorPrimaryLight</item>
        <item name="iconPlaceholder">@drawable/ic_video</item>
        <item name="preferenceTheme">@style/PrefsTheme</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="backgroundColor">@color/darkBackground</item>
    </style>

    <!-- Specific Feed activity theme -->
    <style name="MainActivityThemeLight" parent="ActivityTheme.Primary.Base.Light">
        <!--<item name="android:windowBackground">@color/lightBackground</item>-->
    </style>

    <style name="MainActivityThemeDark" parent="ActivityTheme.Primary.Base.Dark">
        <!--<item name="android:windowBackground">@color/darkBackground</item>-->
    </style>

    <style name="PrefsTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorAccent">?android:attr/textColorHint</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar" />
</resources>
