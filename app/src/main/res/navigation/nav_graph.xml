<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.m3sv.plainupnp.presentation.home.HomeFragment"
        android:label="HomeFragment"
        app:moduleName="feature_home"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settings_fragment"
            app:enterAnim="@anim/slide_up"
            app:exitAnim="@anim/slide_from_center_to_left"
            app:popEnterAnim="@anim/slide_from_left_to_right"
            app:popExitAnim="@anim/slide_down" />
    </fragment>

    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.m3sv.plainupnp.presentation.settings.SettingsFragment"
        android:label="SettingsFragment"
        app:moduleName="feature_settings"
        tools:layout="@layout/settings_fragment" />
</navigation>

